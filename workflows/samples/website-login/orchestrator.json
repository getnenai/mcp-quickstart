{
    "name": "Website Login",
    "workflow_id": "sample-website-login",
    "description": "Navigate to a website and log in with provided credentials",
    "variables": [
        {
            "name": "WEB_URL",
            "value": "",
            "description": "URL of the website to log in to (e.g., 'https://example.com/login')"
        },
        {
            "name": "USERNAME",
            "value": "",
            "description": "Username or email for login"
        },
        {
            "name": "PASSWORD",
            "value": "",
            "type": "password",
            "secret_id": "login_password",
            "description": "Password for login"
        }
    ],
    "states": [
        {
            "name": "system_ready",
            "comparison_config": {
                "strategy": "bash_command",
                "command": "whoami",
                "expected_output": "computeruse"
            }
        },
        {
            "name": "logged_in",
            "comparison_config": {
                "strategy": "vlm_similarity",
                "prompt": "Is the user logged into the website? Look for a dashboard, profile menu, navigation sidebar, or welcome message."
            }
        }
    ],
    "initial_state": {
        "name": "system_ready"
    },
    "desired_state": "logged_in",
    "transitions": [
        {
            "name": "perform_login",
            "from_state": {
                "name": "system_ready"
            },
            "to_state": {
                "name": "logged_in"
            },
            "fsm_file": "./workflow.json"
        }
    ],
    "max_global_retries": 2,
    "timeout_config": {
        "state_validation_timeout_seconds": 60,
        "state_validation_retry_interval_seconds": 10
    }
}